<mujoco model="robotiq_3finger_gripper">
  <!-- 
    Simplified Robotiq-style 3-Finger Gripper
    3 fingers with 2 joints each = 6 DoF for fingers
    + 6 DoF for arm positioning = 12 DoF total
  -->
  
  <compiler angle="radian" autolimits="true"/>
  
  <default>
    <joint damping="0.5" armature="0.01"/>
    <geom friction="1.0 0.5 0.5" condim="4" contype="1" conaffinity="1"/>
    <position kp="20" kv="2"/>
  </default>
  
  <asset>
    <material name="gripper_metal" rgba="0.4 0.4 0.45 1"/>
    <material name="finger_rubber" rgba="0.2 0.2 0.2 1"/>
    <material name="finger_tip" rgba="0.1 0.1 0.1 1"/>
  </asset>
  
  <worldbody>
    <!-- Gripper base mount (attaches to arm or world) -->
    <body name="gripper_base" pos="0 0 0.3">
      <!-- 6 DoF positioning (like a floating base or arm end-effector) -->
      <joint name="base_x" type="slide" axis="1 0 0" range="-0.3 0.3" damping="5"/>
      <joint name="base_y" type="slide" axis="0 1 0" range="-0.3 0.3" damping="5"/>
      <joint name="base_z" type="slide" axis="0 0 1" range="0.05 0.5" damping="5"/>
      <joint name="base_roll" type="hinge" axis="1 0 0" range="-3.14 3.14" damping="1"/>
      <joint name="base_pitch" type="hinge" axis="0 1 0" range="-1.57 1.57" damping="1"/>
      <joint name="base_yaw" type="hinge" axis="0 0 1" range="-3.14 3.14" damping="1"/>
      
      <!-- Palm/base of gripper -->
      <geom name="palm" type="cylinder" size="0.04 0.02" material="gripper_metal"/>
      
      <!-- Finger A (front) -->
      <body name="finger_a_proximal" pos="0.035 0 -0.02" euler="0 0 0">
        <joint name="finger_a_base" type="hinge" axis="0 1 0" range="-0.2 1.4"/>
        <geom name="finger_a_prox_geom" type="capsule" fromto="0 0 0 0.04 0 -0.03" size="0.012" material="finger_rubber"/>
        
        <body name="finger_a_distal" pos="0.04 0 -0.03">
          <joint name="finger_a_tip" type="hinge" axis="0 1 0" range="-0.4 1.2"/>
          <geom name="finger_a_dist_geom" type="capsule" fromto="0 0 0 0.03 0 -0.025" size="0.01" material="finger_tip"/>
          <site name="finger_a_site" pos="0.03 0 -0.025" size="0.005"/>
        </body>
      </body>
      
      <!-- Finger B (back-left) -->
      <body name="finger_b_proximal" pos="-0.0175 0.0303 -0.02" euler="0 0 2.094">
        <joint name="finger_b_base" type="hinge" axis="0 1 0" range="-0.2 1.4"/>
        <geom name="finger_b_prox_geom" type="capsule" fromto="0 0 0 0.04 0 -0.03" size="0.012" material="finger_rubber"/>
        
        <body name="finger_b_distal" pos="0.04 0 -0.03">
          <joint name="finger_b_tip" type="hinge" axis="0 1 0" range="-0.4 1.2"/>
          <geom name="finger_b_dist_geom" type="capsule" fromto="0 0 0 0.03 0 -0.025" size="0.01" material="finger_tip"/>
          <site name="finger_b_site" pos="0.03 0 -0.025" size="0.005"/>
        </body>
      </body>
      
      <!-- Finger C (back-right) -->
      <body name="finger_c_proximal" pos="-0.0175 -0.0303 -0.02" euler="0 0 -2.094">
        <joint name="finger_c_base" type="hinge" axis="0 1 0" range="-0.2 1.4"/>
        <geom name="finger_c_prox_geom" type="capsule" fromto="0 0 0 0.04 0 -0.03" size="0.012" material="finger_rubber"/>
        
        <body name="finger_c_distal" pos="0.04 0 -0.03">
          <joint name="finger_c_tip" type="hinge" axis="0 1 0" range="-0.4 1.2"/>
          <geom name="finger_c_dist_geom" type="capsule" fromto="0 0 0 0.03 0 -0.025" size="0.01" material="finger_tip"/>
          <site name="finger_c_site" pos="0.03 0 -0.025" size="0.005"/>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <!-- Arm/base positioning -->
    <position name="act_base_x" joint="base_x" kp="100"/>
    <position name="act_base_y" joint="base_y" kp="100"/>
    <position name="act_base_z" joint="base_z" kp="100"/>
    <position name="act_base_roll" joint="base_roll" kp="50"/>
    <position name="act_base_pitch" joint="base_pitch" kp="50"/>
    <position name="act_base_yaw" joint="base_yaw" kp="50"/>
    
    <!-- Finger actuators -->
    <position name="act_finger_a_base" joint="finger_a_base" kp="10"/>
    <position name="act_finger_a_tip" joint="finger_a_tip" kp="5"/>
    <position name="act_finger_b_base" joint="finger_b_base" kp="10"/>
    <position name="act_finger_b_tip" joint="finger_b_tip" kp="5"/>
    <position name="act_finger_c_base" joint="finger_c_base" kp="10"/>
    <position name="act_finger_c_tip" joint="finger_c_tip" kp="5"/>
  </actuator>
  
  <sensor>
    <touch name="finger_a_touch" site="finger_a_site"/>
    <touch name="finger_b_touch" site="finger_b_site"/>
    <touch name="finger_c_touch" site="finger_c_site"/>
  </sensor>
</mujoco>
